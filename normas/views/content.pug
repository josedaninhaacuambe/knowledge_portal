extends ./dashboard


block content_box
        .uk-background-default.uk-padding

                h3.uk-margin-medium-left.uk-text-bold.uk-margin-large-top Visão Geral

                div(class="uk-child-width-1-3@s uk-grid-match" uk-grid)
                        div
                                div(class="uk-card uk-card-small uk-card-hover uk-card-body uk-border-rounded")
                                        <p class="uk-text-bolder uk-h4"> <span uk-icon="icon: users; ratio: 1.5 " ></span>  Usuários</p>
                                        p.uk-text-large.uk-text-lighter #{users}
                        div
                                div(class="uk-card uk-card-small  uk-card-hover uk-card-body uk-border-rounded")
                                        <p class="uk-text-bolder uk-h4"> <span uk-icon="icon: album; ratio: 1.5 " ></span>  Sectores</p>
                                        p.uk-text-large.uk-text-lighter #{sectors}

                        div
                                div(class="uk-card uk-card-small uk-card-hover uk-card-body uk-border-rounded")
                                        <p class="uk-text-bolder uk-h4"> <span uk-icon="icon: file-pdf; ratio: 1.5 " ></span>  Normas ISO</p>
                                        p.uk-text-large.uk-text-lighter #{documents}